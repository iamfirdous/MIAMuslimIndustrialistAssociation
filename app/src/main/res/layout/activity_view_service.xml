<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayLight"
    tools:context="com.nexusinfo.mia_muslimindustrialistassociation.ui.activities.ViewServiceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView_viewServicePhoto"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_services"/>

                    <TextView
                        android:id="@+id/textView_viewServiceName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_toRightOf="@id/imageView_viewServicePhoto"
                        android:text="Digital marketing"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/textView_viewCompanyName_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/imageView_viewServicePhoto"
                        android:layout_below="@id/textView_viewServiceName"
                        android:background="@color/colorAccent"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="Onespot Nexusinfo"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                        android:textColor="@color/colorTextWhite" />

                    <TextView
                        android:id="@+id/textView_viewServiceEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView_viewCompanyName_service"
                        android:layout_toRightOf="@id/imageView_viewServicePhoto"
                        android:layout_marginTop="6dp"
                        android:text="Edit service details"
                        android:drawablePadding="6dp"
                        android:drawableLeft="@drawable/ic_edit_update_24" />

                    <TextView
                        android:id="@+id/textView_serviceSpecLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView_viewServicePhoto"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/colorTextBlack"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:text="Description"/>

                    <TextView
                        android:id="@+id/textView_viewServiceSpecification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_serviceSpecLabel"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="3dp"
                        android:text="School ERP software for Management of Schools/Colleges. It is helpful in the Management of Schools and Colleges"/>

                    <TextView
                        android:id="@+id/textView_serviceAvailabilityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView_viewServiceSpecification"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/colorTextBlack"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:text="Service availability"/>

                    <TextView
                        android:id="@+id/textView_viewServiceAvailability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_serviceAvailabilityLabel"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="8dp"
                        android:text="Available"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_serviceAboutCompanyLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="17sp"
                        android:text="About One-spot Nexusinfo"/>

                    <TextView
                        android:id="@+id/textView_serviceMemberNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_serviceAboutCompanyLabel"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/colorTextBlack"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:text="Member name"/>

                    <TextView
                        android:id="@+id/textView_viewServiceMemberName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_serviceMemberNameLabel"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="3dp"
                        android:text="Nazir Ahmed"/>

                    <TextView
                        android:id="@+id/textView_serviceMemberDesignationLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView_viewServiceMemberName"
                        android:layout_below="@+id/textView_viewServiceMemberName"
                        android:text="Member designation"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_viewServiceMemberDesignation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_serviceMemberDesignationLabel"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="3dp"
                        android:text="CEO"/>

                    <TextView
                        android:id="@+id/textView_viewServiceMemberProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_viewServiceMemberDesignation"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="View Nazir Ahmed's profile" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

