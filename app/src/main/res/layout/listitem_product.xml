<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView_productPhoto"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:padding="4dp"
                android:src="@drawable/ic_product"/>

            <TextView
                android:id="@+id/textView_productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageView_productPhoto"
                android:text="Nedusoft"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorTextBlack" />

            <TextView
                android:id="@+id/textView_companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageView_productPhoto"
                android:layout_below="@id/textView_productName"
                android:background="@color/colorAccent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Onespot Nexusinfo"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@color/colorTextWhite"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_productDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageView_productPhoto"
                android:layout_below="@id/textView_companyName"
                android:text="School ERP software for Management of Schools/Colleges"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>